<div class="product-card _product-card">
	<div class="product-card__image">
		<div class="product-card__statuses">
			{% if sale is defined %}
				<div class="product-card__status product-card__status--sale">Экономия 20%</div>
			{% endif %}
			{% if end is defined %}
				<div class="product-card__status product-card__status--end">Нет в наличии</div>
			{% endif %}
			{% if new is defined %}
				<div class="product-card__status product-card__status--new">Новинка</div>
			{% endif %}
			{% if balance is defined %}
				<div class="product-card__status product-card__status--balance">2 штуки</div>
			{% endif %}
		</div>
		<a href="#">
			<picture>
				<source srcset="{{ sourceUrl }}" media="(min-width: 769px)">
				<img src="{{ imgUrl }}" alt="product image">
			</picture>
		</a>
		<div class="product-card__favorit" onclick="o2.productCard.addFavorit(event)">{% include "../../assets/svg/popular-goods-favorit.svg" %}</div>
	</div>
	<div class="product-card__title">
		<a href="#">{{ cardTitle }}</a>
	</div>
	<div class="product-card__raits" data-rating="2.5">
		{% if notReview is defined %}
			<div class="product-card__rait-notstar">
				<span>Нет отзывов</span>
			</div>
			{% else %}
			<div class="product-card__rait-star">
				<i></i>
				<i></i>
				<i></i>
				<i></i>
				<i></i>
				<span>12</span>
			</div>
		{% endif %}
	</div>
	<div class="product-card__price">
		{% if salePrice is defined %}
			<span class="product-card__price-sale">258.20 ₽</span>
			<span class="product-card__price-none">335,66 ₽</span>
		{% endif %}
		{% if usualPrice is defined %}
			<span class="product-card__price-default">335 ₽</span>
		{% endif %}
	</div>
	<div class="product-card__btn">
		<button class="g-button g-button--product-basket" onclick="o2.productCard.changeBasket(event)">В корзину</button>
		<button class="g-button g-button--product-inbasket" onclick="o2.productCard.changeBasket(event)">В корзине</button>
		<button class="g-button g-button--product-disable">В корзину</button>
	</div>
</div>
