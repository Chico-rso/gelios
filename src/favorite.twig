{% extends "layouts/layout.twig" %}
{% block page %}
	<div class="favorite">
		<div class="container">
			{% include 'blocks/breadcrumbs/breadcrumbs.twig' with {breadClass:'breadcrumbs breadcrumbs--mob', items:['Назад']} %}
			<h2>Избранное</h2>
			<div class="favorite__list">
				{% include 'blocks/product-card/product-card.twig' with {'btn':[btn],delete: true, cardTitle: "Аденурик таб. п/о плён. 80 мг", 'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'btn':[btn],delete: true, cardTitle: "Аденурик таб. п/о плён. 80 мг", 'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'btn':[btn],delete: true, cardTitle: "Аденурик таб. п/о плён. 80 мг", 'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'btn':[btn],delete: true, cardTitle: "Аденурик таб. п/о плён. 80 мг", 'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-3.png"} %}
			</div>
			<div class="favorite__list">
				{% include 'blocks/product-card/product-card.twig' with {'btn':[btn],delete: true, cardTitle: "Аденурик таб. п/о плён. 80 мг", 'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'btn':[btn],delete: true, cardTitle: "Аденурик таб. п/о плён. 80 мг", 'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'btn':[btn],delete: true, cardTitle: "Аденурик таб. п/о плён. 80 мг", 'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'btn':[btn],delete: true, cardTitle: "Аденурик таб. п/о плён. 80 мг", 'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-3.png"} %}
			</div>
			<div class="g-pagination g-pagination--mob">
				<div class="g-pagination__arrow g-pagination__arrow--left">{% include 'assets/svg/catalog-category-item-arrow-left.svg' %}<span>Назад</span>
				</div>
				<div class="g-pagination__numbers">
					<div class="g-pagination__number">1</div>
					<div class="g-pagination__number">2</div>
					<div class="g-pagination__number">...</div>
					<div class="g-pagination__number">10</div>
				</div>
				<div class="g-pagination__arrow g-pagination__arrow--right">
					<span>Вперёд</span>
					{% include 'assets/svg/catalog-category-arrow-right.svg' %}
				</div>
			</div>
			<div class="g-pagination g-pagination--desktop">
				<div class="g-pagination__arrow g-pagination__arrow--left">{% include 'assets/svg/catalog-category-item-arrow-left.svg' %}<span>Назад</span>
				</div>
				<div class="g-pagination__numbers">
					<div class="g-pagination__number g-pagination__number--current">1</div>
					<div class="g-pagination__number">2</div>
					<div class="g-pagination__number">3</div>
					<div class="g-pagination__number">...</div>
					<div class="g-pagination__number">60</div>
				</div>
				<div class="g-pagination__arrow g-pagination__arrow--right">
					<span>Вперёд</span>
					{% include 'assets/svg/catalog-category-arrow-right.svg' %}
				</div>
			</div>
		</div>
	</div>
	<div class="products-slider products-slider--see">
		<div class="container">
			<h2>Вы смотрели</h2>
			<div class="products-slider__wr _products-slider">
				{% include 'blocks/product-card/product-card.twig' with {'sale':[sale],inFavorit: true, cardTitle: "Вимакс Супер Форте капс. № 30",'notReview':[notReview],'salePrice':[salePrice],imgUrl:"./img/see-1.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice],inFavorit: true, cardTitle: "Альфазокс р-р д/вн прим. саше…", imgUrl:"./img/see-2.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'end':[end],inFavorit: true,'usualPrice':[usualPrice], cardTitle: "Аденурик таб. п/о плён. 80 мг", imgUrl:"./img/see-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice],inFavorit: true, 'notReview':[notReview],cardTitle: "Тексаред лиоф. д/приг. р-ра д/ин.", imgUrl:"./img/see-4.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice],inFavorit: true,'notReview':[notReview],cardTitle: "Ибупрофен таб. п/о плен. 400 мг", imgUrl:"./img/see-5.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'balance':[balance],inFavorit: true,'usualPrice':[usualPrice],cardTitle: "Нурофен таб. п/о 200мг № 10", imgUrl:"./img/see-6.png"} %}
			</div>
		</div>
	</div>
{% endblock %}
