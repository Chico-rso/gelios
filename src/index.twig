{% extends "layouts/layout.twig" %}

{% block page %}
	{% include "blocks/promo-slider/promo-slider.twig" %}
	<div class="products-slider">
		<div class="container">
			<h2>Популярные товары</h2>
			<div class="products-slider__wr _products-slider">
				{% include 'blocks/product-card/product-card.twig' with {'sale':[sale], 'salePrice':[salePrice],'review':[review], imgUrl: "./img/popular-goods-desktop.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice], 'review': 13, imgUrl: "./img/popular-goods-2.png" } %}
				{% include 'blocks/product-card/product-card.twig' with {'end':[end], 'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice], imgUrl: "./img/popular-goods-4.png"} %}
			</div>
		</div>
	</div>
	{% include "blocks/sale/sale.twig" %}
	<div class="products-slider">
		<div class="container">
			<h2>Актуально в эту погоду</h2>
			<div class="products-slider__wr _products-slider">
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice], 'notReview':[notReview], imgUrl:"./img/relevance-1.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice], imgUrl:"./img/relevance-2.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice], imgUrl:"./img/relevance-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'sale':[sale], 'salePrice':[salePrice], imgUrl:"./img/relevance-4.png"} %}
			</div>
		</div>
	</div>
	<div class="products-slider products-slider--see">
		<div class="container">
			<h2>Вы смотрели</h2>
			<div class="products-slider__wr _products-slider">
				{% include 'blocks/product-card/product-card.twig' with {'sale':[sale], 'salePrice':[salePrice],imgUrl:"./img/see-1.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice], imgUrl:"./img/see-2.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'end':[end],'usualPrice':[usualPrice], imgUrl:"./img/see-3.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice], imgUrl:"./img/see-4.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'usualPrice':[usualPrice], imgUrl:"./img/see-5.png"} %}
				{% include 'blocks/product-card/product-card.twig' with {'balance':[balance],'usualPrice':[usualPrice], imgUrl:"./img/see-6.png"} %}
			</div>
		</div>
	</div>
	{% include "blocks/banners/banners.twig" %}
	{% include "blocks/instagram/instagram.twig" %}
	{% include "blocks/news/news.twig" %}
	{#
		Пример подключения
		{% include '/blocks/component/component.twig' %}
	#}
{% endblock %}
