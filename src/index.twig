{% extends "layouts/layout.twig" %}

{% block page %}
	{% include "blocks/promo-slider/promo-slider.twig" %}
	<div class="products-slider">
		<div class="container">
			<h2>Популярные товары</h2>
			<div class="products-slider__wr _products-slider">
				{% include 'blocks/product-card/product-card.twig' with {'sale':[sale], cardTitle: "Вимакс Супер Форте капс. № 30
", 'salePrice':[salePrice],'review':[review], imgUrl: "./img/popular-goods-desktop.png"} %}
